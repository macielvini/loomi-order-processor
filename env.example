# These variables follow Spring convention for relaxed binding.
# It means that Spring will automatically inject our variables in our application.yaml file
# Following the convention: SPRING_DATASOURCE... = spring.datasource...
# You don't need to change application.yaml, only your .env file

# Database Configuration - connects to postgres container
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/order
SPRING_DATASOURCE_USERNAME=appuser
SPRING_DATASOURCE_PASSWORD=apppass

# Kafka Configuration - connects to kafka container
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Business Rules Configuration (optional - defaults in application.yaml)
# ORDER_PROCESSING_HIGH_VALUE_THRESHOLD=10000.00
# ORDER_PROCESSING_FRAUD_THRESHOLD=20000.00

# Logging Configuration
LOG_LEVEL=INFO

