# Docker Environment Configuration
# Copy this file to .env for Docker Compose deployments
# For local development (outside Docker), use .env.local instead

# Database Configuration - connects to postgres container
DB_URL=jdbc:postgresql://postgres:5432/order_processor
DB_USERNAME=appuser
DB_PASSWORD=apppass

# Kafka Configuration - connects to kafka container
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Business Rules Configuration
HIGH_VALUE_THRESHOLD=10000.00
FRAUD_THRESHOLD=20000.00

# Logging Configuration
LOG_LEVEL=INFO

# Application Configuration (optional)
# SERVER_PORT=8080

